{
  "name": "eslint-config-pob",
  "private": true,
  "version": "29.2.0",
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": "https://github.com:christophehurpeau/eslint-config-pob.git",
  "homepage": "https://github.com/christophehurpeau/eslint-config-pob",
  "engines": {
    "node": ">=6.5.0"
  },
  "workspaces": ["@pob/*"],
  "scripts": {
    "lint": "lerna run --stream lint",
    "preversion": "yarn run lint --since && repository-check-dirty",
    "release": "cross-env GH_TOKEN=$POB_GITHUB_TOKEN lerna version --conventional-commits --conventional-graduate --create-release=github -m 'chore: release' && lerna publish from-git"
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "devDependencies": {
    "@pob/repo-config": "1.0.0",
    "@pob/version": "4.33.0",
    "eslint": "6.2.2",
    "husky": "3.0.4",
    "lerna": "3.16.4",
    "prettier": "1.18.2",
    "repository-check-dirty": "1.0.2"
  }
}
