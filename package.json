{
  "name": "eslint-config-pob",
  "version": "22.0.3",
  "description": "eslint config files",
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": "git@github.com:christophehurpeau/eslint-config-pob.git",
  "homepage": "https://github.com/christophehurpeau/eslint-config-pob",
  "engines": {
    "node": ">= 6.0.0"
  },
  "main": "index.js",
  "scripts": {
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "lint": "eslint --ext .js,.jsx --fix rules/ plugins/ *.js",
    "postcheckout": "yarnhook",
    "postmerge": "yarnhook",
    "postrewrite": "yarnhook",
    "precommit": "lint-staged",
    "preversion": "yarn run lint && pob-repository-check-clean",
    "release": "pob-repository-check-clean && pob-release",
    "version": "pob-version"
  },
  "lint-staged": {
    "{package.json,.eslintrc.json}": [
      "prettier --write",
      "git add"
    ],
    "lib/**/*.json": [
      "prettier --write",
      "git add"
    ],
    "lib/**/*.js": [
      "eslint --fix --quiet",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-prefer-class-properties": "^1.0.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-unicorn": "^5.0.0"
  },
  "peerDependencies": {
    "eslint": "^5.3.0",
    "prettier": "^1.14.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "pob-release": "^3.1.0",
    "prettier": "^1.14.2",
    "yarnhook": "^0.3.0"
  }
}
